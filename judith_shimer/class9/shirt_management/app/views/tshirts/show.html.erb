<h2>T-Shirt</h2>

<div class="table">
	<div class="tr-header">
		<div class="td">ID</div>
		<div class="td">Color</div>
		<div class="td">Size</div>
		<div class="td">Rating</div>
	</div>
	<div class="tr">
		<div class="td"><%= @tshirt.id %></div>
		<div class="td"><%= @tshirt.color.upcase %></div>
		<div class="td"><%= @tshirt.size.upcase %></div>
		<div class="td"><%= @tshirt.rating %></div>
	</div>
</div>